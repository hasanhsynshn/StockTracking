@model StockTracking.Models.Entities.Basket
    @{
        ViewBag.Title = "Sale";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="modal-header">
        <h2>Satın Al</h2>


    </div>
    <div class="container">
        @using (Html.BeginForm("Sale2","Sales", FormMethod.Post))
        {
        <div class="modal-body">
            @Html.HiddenFor(x => x.BasketId)

            <div class="form-group">
                Kullanıcı Adı Soyad: @Html.DisplayFor(x => x.User.UserNameSurname, new { @class = "form-control" })
            </div>
            <div class="form-group">
                Birim Fiyatı: @Html.DisplayFor(x => x.Product.ProductName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                Birim Fiyatı: @Html.DisplayFor(x => x.PurchasePrice, new { @class = "form-control" })
            </div>
            <div class="form-group">
               Adet: @Html.DisplayFor(x => x.Quantity, new { @class = "form-control" })
            </div>
            <div class="form-group">
               Toplam Fiyat: @Html.DisplayFor(x => x.TotalPrice, new { @class = "form-control" })
            </div>
        </div>

            <div class="modal-footer" style="float:right">

                <button class="btn btn-success">Satın Al</button>
                <a href="/Basket/Index/" class="btn btn-dark">Çıkış</a>
            </div>
        }


    </div>
