@model StockTracking.Models.Entities.Category
@{
    ViewBag.Title = "GetRemove";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container">
    <form class="form-group" action="/Brand/Remove/">
      @Html.HiddenFor(x=>x.CategoryId)
        <div class="form-group">

            <b>Kategori</b>
            @Html.TextBoxFor(x => x.Category1, new { @class = "form-control" })

        </div>
        <div class="form-group">

            <b>Açıklama</b>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

        </div>
        <button type="submit" class="btn btn-danger">Sil</button>
    </form>
</div>
