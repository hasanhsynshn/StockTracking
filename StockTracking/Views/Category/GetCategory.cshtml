@model StockTracking.MyModel.MyCategory
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container">
        <form class="form-group" method="get" action="/Category/Update/">
            <div class="form-group">
                

                <b>ID</b>
                @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control" })

            </div>
            <div class="form-group">

                <b>Kategori</b>
                @Html.TextBoxFor(x => x.Category1, new { @class = "form-control" })

            </div>
            <div class="form-group">

                <b>Açıklama</b>
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })

            </div>
            <button class="btn btn-primary">Güncelle</button>
        </form>
    </div>

